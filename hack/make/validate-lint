#!/bin/bash

source "${MAKEDIR}/.validate"

# We will eventually get to the point when packages should be the complete list
# of subpackages, vendoring excluded, as given by:
#  go list ./... | grep -v "^github.com/docker/docker/vendor"
packages=(
	builder/parser/dumper
	cliconfig
	daemon/events
	daemon/execdriver/execdrivers
	daemon/execdriver/native/template
	daemon/execdriver/windows
	daemon/graphdriver/btrfs
	daemon/network
	docker
	dockerinit
	pkg/broadcastwriter
	pkg/chrootarchive
	pkg/directory
	pkg/fileutils
	pkg/homedir
	pkg/listenbuffer
	pkg/mflag/example
	pkg/namesgenerator
	pkg/promise
	pkg/pubsub
	pkg/random
	pkg/reexec
	pkg/stringid
	pkg/symlink
	pkg/tailfile
	pkg/timeoutconn
	pkg/timeutils
	pkg/tlsconfig
	pkg/units
	pkg/urlutil
	pkg/version
	utils
)

errors=()
for p in "$packages"; do
	failedLint=$(golint "github.com/docker/docker/$p")
	if [ "$failedLint" ]; then
		errors+=( "$failedLint"  )
	fi
done

if [ ${#errors[@]} -eq 0 ]; then
	echo 'Congratulations!  All Go source files have been linted.'
else
	{
		echo "Errors from golint:"
		echo "${errors[@]}"
		echo
		echo 'Please fix the above errors. You can test via "golint" and commit the result.'
		echo
	} >&2
	false
fi
